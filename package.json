{
  "name": "flow-modal",
  "description": "A guided, multi-step modal using customizable web components and state persistence.",
  "license": "MIT",
  "author": "Yuji Isobe",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "analyze": "cem analyze --litelement",
    "dev": "vite",
    "build": "vite build && npm run analyze --exclude dist",
    "format": "prettier . -w",
    "format:check": "prettier . --check",
    "lint": "eslint . --quiet",
    "lint:fix": "eslint . --quiet --fix",
    "preinstall": "npx only-allow bun",
    "prepublish": "bun run build",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "chromatic": "npx chromatic --exit-once-uploaded"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yujiosaka/flow-modal.git"
  },
  "keywords": [
    "component",
    "flow",
    "modal",
    "lit",
    "webcomponent"
  ],
  "bugs": {
    "url": "https://github.com/yujiosaka/flow-modal/issues"
  },
  "homepage": "https://github.com/yujiosaka/flow-modal#readme",
  "files": [
    "dist"
  ],
  "dependencies": {
    "cascade-storage": "^1.0.0",
    "date-fns": "^4.1.0",
    "lit": "^3.2.1",
    "ms": "^2.1.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.4",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@eslint/js": "^9.19.0",
    "@happy-dom/global-registrator": "^16.8.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/exec": "^7.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^11.0.1",
    "@semantic-release/npm": "^12.0.1",
    "@semantic-release/release-notes-generator": "^14.0.3",
    "@storybook/addon-a11y": "^8.5.2",
    "@storybook/addon-essentials": "^8.5.2",
    "@storybook/blocks": "^8.5.2",
    "@storybook/test": "^8.5.2",
    "@storybook/web-components": "^8.5.2",
    "@storybook/web-components-vite": "^8.5.2",
    "@types/bun": "latest",
    "@types/ms": "^2.1.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "ajv": "^8.17.1",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-lit": "^1.15.0",
    "eslint-plugin-prettier": "^5.2.3",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-storybook": "^0.11.2",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "semantic-release": "^24.2.1",
    "storybook": "^8.5.2",
    "typescript": "~5.7.3",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.0.11",
    "vite-plugin-dts": "^4.5.0"
  },
  "customElements": "custom-elements.json",
  "lint-staged": {
    "*.{ts,js,json}": [
      "eslint --fix"
    ],
    "*": [
      "prettier --write --ignore-unknown"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
